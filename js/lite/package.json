{
	"name": "@gradio/lite",
	"version": "4.41.0",
	"description": "Serverless Gradio",
	"type": "module",
	"main": "dist/lite.js",
	"author": "Gradio Team",
	"license": "Apache-2.0",
	"files": [
		"dist"
	],
	"scripts": {
		"cssbuild": "python ../../scripts/generate_theme.py --outfile ./src/theme.css",
		"pybuild:gradio": "cd ../../ && hatch build -t lite",
		"pybuild:gradio-client": "cd ../../client/python && python -m build",
		"pybuild": "run-p pybuild:*",
		"build": "pnpm pybuild && pnpm cssbuild && pnpm --filter @gradio/client build && pnpm --filter @gradio/wasm build && vite build --mode production:lite",
		"build:frontend": "vite build --mode production:lite",
		"dev:lite": "run-p dev:lite:*",
		"dev:lite:self": "vite --port 9876 --mode development:lite",
		"dev:lite:worker": "pnpm --filter @gradio/wasm dev",
		"test:browser:lite": "GRADIO_E2E_TEST_LITE=1 pnpm --filter @gradio/spa test:browser",
		"test:browser:lite:dev": "GRADIO_E2E_TEST_LITE=1 pnpm --filter @gradio/spa test:browser:dev"
	},
	"devDependencies": {
		"gradio": "workspace:^",
		"@gradio/atoms": "workspace:^",
		"@gradio/build": "workspace:^",
		"@gradio/core": "workspace:^",
		"@gradio/spa": "workspace:^",
		"@gradio/theme": "workspace:^",
		"@gradio/wasm": "workspace:^"
	}
}
